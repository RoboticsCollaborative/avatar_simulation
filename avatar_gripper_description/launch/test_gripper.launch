<?xml version="1.0" ?>

<launch>
  <arg name="mimic" default="true"/>
  <param name="robot_description" command="$(find xacro)/xacro $(find avatar_gripper_description)/urdf/avatar_gripper_3f.xacro mimic:=$(arg mimic)" />  
  
  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
    <remap unless="$(arg mimic)" from="joint_states" to="/avatar_joint_states"/>
  </node>
  <node unless="$(arg mimic)" name="avatar_joint_state_publisher" pkg="avatar_robot_description" type="avatar_joint_state_publisher.py" output="screen"/>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find avatar_gripper_description)/rviz/test_gripper.rviz" required="true" />
</launch>
