        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.9 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/thumb_base_extra.obj"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>

