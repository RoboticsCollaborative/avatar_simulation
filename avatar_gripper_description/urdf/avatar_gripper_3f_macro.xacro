<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find avatar_gripper_description)/urdf/utils.xacro"/>

  <xacro:macro name="gripper_base_link" params="prefix">
    <link name="${prefix}_gripper_base">
      <inertial>
        <mass value="2.0"/>
        <inertia ixx="7.11E-3" ixy="0.0" ixz="0.0" iyy="7.11E-3" iyz="0.0" izz="7.11E-3"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/gripper_base.obj"/>
        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.7 1"/>
        </material>
      </visual>
      <!-- <collision>
        <origin xyz="0 0 -0.03" rpy="0 0 0"/>
        <geometry>
          <box size="0.1 0.1 0.06"/>
        </geometry>
      </collision> -->
    </link>
  </xacro:macro>

  <xacro:macro name="thumb_base_link" params="prefix">
    <link name="${prefix}_thumb_base">
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="4E-5" ixy="0.0" ixz="0.0" iyy="4E-5" iyz="0.0" izz="4E-5"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0   0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/thumb_base_extra.obj"/>
        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.9 1"/>
        </material>
      </visual>
      <xacro:collision_capsule_custom radius="0.01" length="0.036" xyz="0 0 -0.02" direction="z 0"/>
    </link>
  </xacro:macro>

  <xacro:macro name="thumb_knuckle_link" params="prefix">
    <link name="${prefix}_thumb_knuckle">
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="4E-5" ixy="0.0" ixz="0.0" iyy="4E-5" iyz="0.0" izz="4E-5"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/thumb_knuckle.obj"/>
        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.9 1"/>
        </material>
      </visual>
      <!-- <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/thumb_knuckle.obj"/>
        </geometry>
      </collision> -->
      <xacro:collision_capsule_custom radius="0.009" length="0.047" xyz="0.0235 0 0" direction="x 0"/>
    </link>
  </xacro:macro>

  <xacro:macro name="thumb_finger_link" params="prefix">
    <link name="${prefix}_thumb_finger">
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="4E-5" ixy="0.0" ixz="0.0" iyy="4E-5" iyz="0.0" izz="4E-5"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/thumb_fingertip.obj"/>
        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.9 1"/>
        </material>
      </visual>
      <!-- <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/thumb_fingertip.obj"/>
        </geometry>
      </collision> -->
      <xacro:collision_capsule_custom radius="0.008" length="0.041" xyz="0.020 0 0" direction="x 0"/>
    </link>
  </xacro:macro>
  
  <xacro:macro name="index_base_connector" params="prefix">
    <link name="${prefix}_index_base_connector">
      <inertial>
        <mass value="0.02"/>
        <inertia ixx="4E-5" ixy="0.0" ixz="0.0" iyy="4E-5" iyz="0.0" izz="4E-5"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/index_base_connector.obj"/>
        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.9 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/index_base_connector.obj"/>
        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.9 1"/>
        </material>
      </collision>
    </link>
  </xacro:macro>

  <xacro:macro name="index_knuckle" params="prefix">
    <link name="${prefix}_index_knuckle">
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="4E-5" ixy="0.0" ixz="0.0" iyy="4E-5" iyz="0.0" izz="4E-5"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/index_knuckle.obj"/>
        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.9 1"/>
        </material>
      </visual>
      <xacro:collision_capsule_custom radius="0.01" length="0.040" xyz="0.02 0 0" direction="x 0"/>
    </link>
  </xacro:macro>

  <xacro:macro name="index_fingertip" params="prefix">
    <link name="${prefix}_index_fingertip">
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="4E-5" ixy="0.0" ixz="0.0" iyy="4E-5" iyz="0.0" izz="4E-5"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/index_fingertip.obj"/>
        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.9 1"/>
        </material>
      </visual>
      <xacro:collision_capsule_custom radius="0.008" length="0.026" xyz="0.013 0 0" direction="x 0"/>
      <xacro:collision_capsule_custom radius="0.008" length="0.023" xyz="0.038 -0.009 0" direction="x -0.67"/>
    </link>
  </xacro:macro>

  <xacro:macro name="middle_knuckle" params="prefix">
    <link name="${prefix}_middle_knuckle">
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="4E-5" ixy="0.0" ixz="0.0" iyy="4E-5" iyz="0.0" izz="4E-5"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/index_knuckle.obj"/>
        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.9 1"/>
        </material>
      </visual>
      <!-- <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/index_knuckle.obj"/>
        </geometry>
      </collision> -->
      <xacro:collision_capsule_custom radius="0.01" length="0.040" xyz="0.02 0 0" direction="x 0"/>
    </link>
  </xacro:macro>

  <xacro:macro name="middle_fingertip" params="prefix">
    <link name="${prefix}_middle_fingertip">
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="4E-5" ixy="0.0" ixz="0.0" iyy="4E-5" iyz="0.0" izz="4E-5"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/index_fingertip.obj"/>
        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.9 1"/>
        </material>
      </visual>
      <!-- <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/index_fingertip.obj"/>
        </geometry>
      </collision> -->
      <xacro:collision_capsule_custom radius="0.008" length="0.026" xyz="0.013 0 0" direction="x 0"/>
      <xacro:collision_capsule_custom radius="0.008" length="0.023" xyz="0.038 -0.009 0" direction="x -0.67"/>
    </link>
  </xacro:macro>

  <xacro:macro name="thumb_swivel_link" params="prefix">
    <link name="${prefix}_thumb_swivel_link">
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="4E-5" ixy="0.0" ixz="0.0" iyy="4E-5" iyz="0.0" izz="4E-5"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/thumb_swivel_link.obj"/>
        </geometry>
        <material name="">
          <color rgba="0.9 0.9 0.9 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://avatar_gripper_description/meshes/${prefix}/thumb_swivel_link.obj"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>

  <!-- joints  -->
  <xacro:macro name="thumb_knuckle_joint" params="prefix">
    <joint name="${prefix}_thumb_knuckle_joint" type="revolute">
      <origin xyz="0 0 0" rpy="0 3.064 0"/>
      <parent link="${prefix}_thumb_base"/>
      <child link="${prefix}_thumb_knuckle"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.0" upper="0.4" velocity="2.0" effort="1000" />
      <xacro:if value="$(arg mimic)">
        <mimic joint="${prefix}_thumb_flex_motor_joint" offset="0" multiplier="0.28"/>
      </xacro:if>
    </joint>
  </xacro:macro>

  <xacro:macro name="thumb_finger_joint" params="prefix">
    <joint name="${prefix}_thumb_finger_joint" type="revolute">
      <!-- <origin xyz="0.04568 0 0.01106" rpy="0 0.57 0"/> -->
      <origin xyz="0.047 0 0" rpy="0 ${0.57-40/180*pi} 0"/>
      <parent link="${prefix}_thumb_knuckle"/>
      <child link="${prefix}_thumb_finger"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.8" upper="0" velocity="2.0" effort="1000" />
      <xacro:if value="$(arg mimic)">
        <mimic joint="${prefix}_thumb_flex_motor_joint" offset="0" multiplier="0.24"/>
      </xacro:if>
    </joint>
  </xacro:macro>

  <xacro:macro name="thumb_base_swivel_joint" params="prefix">
    <joint name="${prefix}_thumb_base_swivel_joint" type="fixed">
      <origin xyz="-0.03742 0 0.05089" rpy="0 -${30/180*pi} 0"/>
      <parent link="${prefix}_thumb_swivel_link"/>
      <child link="${prefix}_thumb_base"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="thumb_swivel_joint" params="prefix">
    <joint name="${prefix}_thumb_swivel_joint" type="revolute">
      <xacro:if value="${prefix == 'left'}">
        <origin xyz="0 0 0.0173" rpy="0 0 0.7853"/>
      </xacro:if>
      <xacro:if value="${prefix == 'right'}">
        <origin xyz="0 0 0.0173" rpy="0 0 0"/>
      </xacro:if>
      <parent link="${prefix}_index_base_connector"/>
      <child link="${prefix}_thumb_swivel_link"/>
      <axis xyz="0 0 1"/>
      <limit lower="0" upper="1.7" velocity="2.0" effort="1000" />
      <xacro:if value="$(arg mimic)">
        <mimic joint="${prefix}_thumb_swivel_motor_joint" offset="0.43" multiplier="-0.6075"/>
      </xacro:if>
    </joint>
  </xacro:macro>

  <xacro:macro name="index_knuckle_joint" params="prefix">
    <joint name="${prefix}_index_knuckle_joint" type="revolute">
      <xacro:if value="${prefix == 'left'}">
        <origin xyz="0.02156 0.008545 -0.0024358" rpy="-0.8363 1.3087 -0.9408"/>
      </xacro:if>
      <xacro:if value="${prefix == 'right'}">
        <origin xyz="-0.021564878 0.008545 -0.0024358" rpy="-2.3053 1.3087 -2.2008"/>
      </xacro:if>
      <parent link="${prefix}_index_base_connector"/>
      <child link="${prefix}_index_knuckle"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.8" upper="0" velocity="2.0" effort="1000" />
      <xacro:if value="$(arg mimic)">
        <mimic joint="${prefix}_index_flex_motor_joint" offset="0" multiplier="0.4016"/>
      </xacro:if>
    </joint>
  </xacro:macro>

  <xacro:macro name="index_fingertip_joint" params="prefix">
    <joint name="${prefix}_index_fingertip_joint" type="revolute">
      <origin xyz="0.04499 0 0" rpy="0 0 0.313"/>
      <parent link="${prefix}_index_knuckle"/>
      <child link="${prefix}_index_fingertip"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.8" upper="0" velocity="2.0" effort="1000" />
      <xacro:if value="$(arg mimic)">
        <mimic joint="${prefix}_index_flex_motor_joint" offset="0" multiplier="0.4"/>
      </xacro:if>
    </joint>
  </xacro:macro>
  <xacro:macro name="middle_knuckle_joint" params="prefix">
    <joint name="${prefix}_middle_knuckle_joint" type="revolute">
      <xacro:if value="${prefix == 'left'}">
        <origin xyz="-0.021564878 0.008545 -0.0024358" rpy="-2.3053 1.3087 -2.2008"/>
      </xacro:if>
      <xacro:if value="${prefix == 'right'}">
        <origin xyz="0.02156 0.008545 -0.0024358" rpy="-0.8363 1.3087 -0.9408"/>
      </xacro:if>
      <parent link="${prefix}_index_base_connector"/>
      <child link="${prefix}_middle_knuckle"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.8" upper="0" velocity="2.0" effort="1000" />
      <xacro:if value="$(arg mimic)">
        <mimic joint="${prefix}_index_knuckle_joint" offset="0" multiplier="1"/>
      </xacro:if>
    </joint>
  </xacro:macro>

  <xacro:macro name="middle_fingertip_joint" params="prefix">
    <joint name="${prefix}_middle_fingertip_joint" type="revolute">
      <origin xyz="0.04499 0 0" rpy="0 0 0.313"/>
      <parent link="${prefix}_middle_knuckle"/>
      <child link="${prefix}_middle_fingertip"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.8" upper="0" velocity="2.0" effort="1000" />
      <xacro:if value="$(arg mimic)">
        <mimic joint="${prefix}_index_fingertip_joint" offset="0" multiplier="1"/>
      </xacro:if>
    </joint>
  </xacro:macro>

  <xacro:macro name="gripper_base_joint" params="prefix">
    <joint name="${prefix}_gripper_base_joint" type="fixed">
      <xacro:if value="${prefix == 'left'}">
        <origin xyz="-0.00736 0.139 -0.066017" rpy="1.57 0 0"/>
      </xacro:if>
      <xacro:if value="${prefix == 'right'}">
        <origin xyz="0.00736 0.139 -0.066017" rpy="1.57 0 0"/>
      </xacro:if>
      <parent link="${prefix}_gripper_base"/>
      <child link="${prefix}_index_base_connector"/>
    </joint>
  </xacro:macro>

  <!-- actuator links -->
  <xacro:macro name="motor_link" params="prefix actuation">
    <link name="${prefix}_${actuation}_motor">
      <inertial>
        <mass value="0.25"/>
        <inertia ixx="1.463E-04" ixy="0" ixz="0" iyy="1.463E-04" iyz="0" izz="1.463E-04"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.02" length="0.01"/>
        </geometry>
      </visual>
    </link>
  </xacro:macro>

  <!-- actuator joints -->
  <xacro:macro name="index_flex_motor_joint" params="prefix motor_base_attach_to">
    <joint name="${prefix}_index_flex_motor_joint" type="revolute">
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <parent link="${motor_base_attach_to}"/>
      <child link="${prefix}_index_flex_motor"/>
      <axis xyz="0 0 1"/>
      <limit lower="-2.3" upper="-0.08" velocity="2.0" effort="1000" />
    </joint>
  </xacro:macro>

  <xacro:macro name="thumb_flex_motor_joint" params="prefix motor_base_attach_to">
    <joint name="${prefix}_thumb_flex_motor_joint" type="revolute">
      <origin xyz="-0.05 0.0 0.0" rpy="0 0 0"/>
      <parent link="${motor_base_attach_to}"/>
      <child link="${prefix}_thumb_flex_motor"/>
      <axis xyz="0 0 1"/>
      <limit lower="-2.3" upper="-0.08" velocity="2.0" effort="1000" />
    </joint>
  </xacro:macro>

  <xacro:macro name="thumb_swivel_motor_joint" params="prefix motor_base_attach_to">
    <joint name="${prefix}_thumb_swivel_motor_joint" type="revolute">
      <origin xyz="-0.1 0.0 0.0" rpy="0 0 0"/>
      <parent link="${motor_base_attach_to}"/>
      <child link="${prefix}_thumb_swivel_motor"/>
      <axis xyz="0 0 1"/>
      <limit lower="-2.3" upper="-0.05" velocity="2.0" effort="1000" />
    </joint>
  </xacro:macro>

  <xacro:macro name="gripper_motor_transmission" params="prefix name">
    <transmission name="${prefix}_${name}_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_${name}">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_${name}_actuator">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>

  
  <xacro:macro name="avatar_gripper_3f" params="prefix motor_base_attach_to">
    <xacro:thumb_base_link prefix="${prefix}"/>
    <xacro:thumb_knuckle_link prefix="${prefix}"/>
    <xacro:thumb_knuckle_joint prefix="${prefix}"/>
    <xacro:thumb_finger_link prefix="${prefix}"/>
    <xacro:thumb_finger_joint prefix="${prefix}"/>
    <xacro:thumb_swivel_link prefix="${prefix}"/>
    <xacro:thumb_swivel_joint prefix="${prefix}"/>
    <xacro:thumb_base_swivel_joint prefix="${prefix}"/>
    <xacro:index_base_connector prefix="${prefix}"/>
    <xacro:index_knuckle prefix="${prefix}"/>
    <xacro:index_knuckle_joint prefix="${prefix}"/>
    <xacro:index_fingertip prefix="${prefix}"/>
    <xacro:index_fingertip_joint prefix="${prefix}"/>
    <xacro:middle_knuckle prefix="${prefix}"/>
    <xacro:middle_knuckle_joint prefix="${prefix}"/>
    <xacro:middle_fingertip prefix="${prefix}"/>
    <xacro:middle_fingertip_joint prefix="${prefix}"/>
    <xacro:gripper_base_link prefix="${prefix}"/>
    <xacro:gripper_base_joint prefix="${prefix}"/>

    <xacro:motor_link prefix="${prefix}" actuation="thumb_flex"/>
    <xacro:thumb_flex_motor_joint prefix="${prefix}" motor_base_attach_to="${motor_base_attach_to}"/>
    <xacro:motor_link prefix="${prefix}" actuation="thumb_swivel"/>
    <xacro:thumb_swivel_motor_joint prefix="${prefix}" motor_base_attach_to="${motor_base_attach_to}"/>
    <xacro:motor_link prefix="${prefix}" actuation="index_flex"/>
    <xacro:index_flex_motor_joint prefix="${prefix}" motor_base_attach_to="${motor_base_attach_to}"/>

    <!-- Transmission definitions -->
    <xacro:gripper_motor_transmission prefix="${prefix}" name="thumb_knuckle_joint"/>
    <xacro:gripper_motor_transmission prefix="${prefix}" name="thumb_finger_joint"/>
    <xacro:gripper_motor_transmission prefix="${prefix}" name="thumb_swivel_joint"/>
    <xacro:gripper_motor_transmission prefix="${prefix}" name="index_knuckle_joint"/>
    <xacro:gripper_motor_transmission prefix="${prefix}" name="index_fingertip_joint"/>
    <xacro:gripper_motor_transmission prefix="${prefix}" name="middle_knuckle_joint"/>
    <xacro:gripper_motor_transmission prefix="${prefix}" name="middle_fingertip_joint"/>
    <xacro:gripper_motor_transmission prefix="${prefix}" name="thumb_flex_motor_joint"/>
    <xacro:gripper_motor_transmission prefix="${prefix}" name="thumb_swivel_motor_joint"/>
    <xacro:gripper_motor_transmission prefix="${prefix}" name="index_flex_motor_joint"/>
  </xacro:macro>
</robot>